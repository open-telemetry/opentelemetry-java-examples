<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{36} - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- OpenTelemetry appender for exporting logs -->
    <appender name="OpenTelemetry"
              class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="OpenTelemetry"/>
    </root>

    <!-- Reduce OpenTelemetry internal logging -->
    <logger name="io.opentelemetry" level="WARN"/>
    <logger name="io.opentelemetry.sdk" level="WARN"/>
    
    <!-- Application logging -->
    <logger name="io.opentelemetry.example" level="INFO"/>
</configuration>